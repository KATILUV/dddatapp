modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["wget"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StaticServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SimpleServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BasicServer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ExpoTunnel"

[[workflows.workflow]]
name = "StaticServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "SimpleServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "BasicServer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node basic-server.js"
waitForPort = 5000

[[workflows.workflow]]
name = "ExpoTunnel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node start-expo.js"

[deployment]
run = ["sh", "-c", "npx expo start --web --port 5000 --no-dev"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 19000
externalPort = 3000

[[ports]]
localPort = 19006
externalPort = 3001
